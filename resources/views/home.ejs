<section class="menu container mx-auto py-8">
  <h1 class="text-xl font-bold mb-8">All Foods</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid cols-3 xl:grid-cols-4 col-gap-12 gap-4">

    <% food.forEach(function(food){ %>
      <div class="w-full md:w-64"> 
        <img class="h-40 mb-4 mx-auto" src="/img/<%=food.image%>" alt="">
        <div class="text-center">
          <h2 class="mb-4 text-lg"><%= food.name %></h2>
          <span class="size py-1 px-4 rounded-full upercase text-xs"><%= food.size %></span>
          <div class="flex item-center justify-around mt-6">
            <span class="font-bold text-lg">Rs<%= food.price %></span>
          </div>
          <div class="flex item-center justify-around mt-6">
            <button data-food="<%= JSON.stringify(food) %>"
              class="add-to-cart py-1 px-2 rounded-full flex items-center font-bold">
              <span>+</span>
              <span class="ml-4">Add</span>
          </button>
          <button data-food="<%= JSON.stringify(food) %>"
            class="remove-to-cart py-1 px-2 rounded-full flex items-center font-bold">
            <span>-</span>
            <span class="ml-4">Remove</span>
        </button>
          </div>
        </div>  
      </div>
    <% })%>    
  </div>
  <hr>
  
</section>